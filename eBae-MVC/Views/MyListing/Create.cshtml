@model eBae_MVC.Models.Listing

@{
    ViewBag.Title = "Create";
}

<h2>Create New Listing</h2>

@using (Html.BeginForm(null, null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

        <table align="center" width="420" >
            <tr>
                <td style="text-align: left">Title</td>
                <td>
                    @Html.EditorFor(model => model.Title)
                    @Html.ValidationMessageFor(model => model.Title)
                </td>
            </tr>

            <tr>
                <td style="text-align: left">Description</td>
                <td>
                    @Html.EditorFor(model => model.Description)
                    @Html.ValidationMessageFor(model => model.Description)
                </td>
            </tr>

            <tr>
                <td style="text-align: left">Starting Price</td>
                <td>
                    @Html.EditorFor(model => model.StartingPrice)
                    @Html.ValidationMessageFor(model => model.StartingPrice)
                </td>
            </tr>

            <tr>
                <td style="text-align: left">Ending Time (MM/DD/YYYY HH:MM)</td>
                <td>
                    <input id="EndTimestamp" name="EndTimestamp" type="text">

                </td>
            </tr>

            <tr>
                <td style="text-align: left">Image Path</td>
                <td>
                    <input type="file" name="file" id="file" style="width: 100%;" accept=".jpg" />
                </td>
            </tr>
        </table>
        <center>
            <input type="submit" value="Create" class="button"/>
            @Html.ActionLink("Back to List", "Index", null, new { @class = "button" })
        </center>
}

@section scripts {

   <script src="@Url.Content("~/Scripts/jquery.datetimepicker.full.js")" type="text/javascript"></script>
    <script>
        $(function () {
            jQuery('#EndTimestamp').datetimepicker({
                formatDate:'m/d/Y H:m',
                minDate: '0',
                minTime: '0',
                onChangeDateTime: function (dp, $input) {
                    // Check if datetime is beyond datetimenow
                   // alert($input.val())
                }
            })
        });
    </script>
}
